<Window x:Class="DrawingAppWPF.MainWindow"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DrawingAppWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Modifiers="Control" Key="Z" Command="{Binding UndoCommand}" />
        <KeyBinding Modifiers="Control" Key="Y" Command="{Binding RedoCommand}" />
    </Window.InputBindings>

    <DockPanel>
        <!-- Toolbar goes here -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="5">
            <xctk:ColorPicker 
        SelectedColor="{Binding BrushSettings.BrushColorAsColor, Mode=TwoWay}" 
        Width="150" 
        Height="30" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <Button Content="Pencil" Command="{Binding SetBrushCommand}" CommandParameter="Pencil" Margin="2"/>
            <Button Content="Pen" Command="{Binding SetBrushCommand}" CommandParameter="Pen" Margin="2"/>
            <Button Content="Paint Brush" Command="{Binding SetBrushCommand}" CommandParameter="PaintBrush" Margin="2"/>
            <Button Content="Marker" Command="{Binding SetBrushCommand}" CommandParameter="Marker" Margin="2"/>
            <Button Content="Eraser" Command="{Binding SetBrushCommand}" CommandParameter="Eraser" Margin="2"/>
        </StackPanel>

        <InkCanvas x:Name="DrawingInkCanvas"
        Background="White"
           />        
    </DockPanel>
</Window>
